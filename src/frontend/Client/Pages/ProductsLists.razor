@page "/products-lists"

<PageTitle>ProductsLists</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="ProductsLists" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@productsLists" LoadData="@Grid0LoadData" Count="@count" TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="id" Title="id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="name" Title="name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="description" Title="description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="enabled" Title="enabled">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="public1" Title="public1">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="total_products_count" Title="totalproductscount">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="total_products_value" Title="totalproductsvalue">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="external_link" Title="externallink">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="created_date" Title="createddate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="updated_date" Title="updateddate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Property="User.user_name" Title="User">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="JoaoDiasDev.ListGenius.UI.Server.Models.joaodiasdev_list_genius.ProductsList" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="productsList">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, productsList)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
