<AuthorizeView>
    <Authorized>
        <MudText Typo="Typo.body1" Class="mr-2">@context?.User?.Identity?.Name</MudText>
        <MudButton Variant="Variant.Filled"
                   EndIcon="@Icons.Material.Filled.Logout"
                   ButtonType="ButtonType.Button"
                   Href="LogOut"
                   Color="Color.Secondary"
                   Size="Size.Small"
                   IconSize="Size.Small"
                   IconColor="Color.Default">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Filled"
                   EndIcon="@Icons.Material.Filled.Login"
                   ButtonType="ButtonType.Button"
                   Href="Login"
                   Color="Color.Success"
                   Size="Size.Small"
                   IconSize="Size.Small"
                   IconColor="Color.Default">Log in</MudButton>
    </NotAuthorized>
</AuthorizeView>