<MudDialog>
    <DialogContent>
        <div class="p-4">
            <p>@ContentText</p>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@Confirm">Confirm</MudButton>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="@Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public string? ContentText { get; set; }
    [Parameter] public EventCallback<bool> OnConfirmationChanged { get; set; }

    private async Task Confirm()
    {
        await OnConfirmationChanged.InvokeAsync(true);
    }

    private async Task Cancel()
    {
        await OnConfirmationChanged.InvokeAsync(false);
    }
}
